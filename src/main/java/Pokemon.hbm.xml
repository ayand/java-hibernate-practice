<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <class name="Pokemon" table="Pokemon">
      <meta attribute="class-description">
         This class contains the Pokemon detail.
      </meta>
      <id name="id" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="species" column="species" type="string"/>
      <property name="type1" column="type1" type="string"/>
      <property name="type2" column="type2" type="string"/>
      <property name="ability1" column="ability1" type="string"/>
      <property name="ability2" column="ability2" type="string"/>
      <property name="abilityH" column="abilityH" type="string"/>
      <property name="hp" column="hp" type="int"/>
      <property name="attack" column="attack" type="int"/>
      <property name="defense" column="defense" type="int"/>
      <property name="spattack" column="spattack" type="int"/>
      <property name="spdefense" column="spdefense" type="int"/>
      <property name="speed" column="speed" type="int"/>
      <property name="eggGroup1" column="eggGroup1" type="string"/>
      <property name="eggGroup2" column="eggGroup2" type="string"/>
   </class>
</hibernate-mapping>
